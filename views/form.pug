extends layout

block content
    -data = data || {}

    section#intro-text
        span Simple Kitchen
        h3
            | Simple &amp; Comforting 
            br
            |             Recipes All Year Round
        p Pan-seared chicken, Grill shrimp, mac &amp; cheese&mdash;need we say more?
        //
            <p class="success">SUCCESS</p>
            <p class="error">ERROR</p>
            <p class="warning">WARNING</p>
        button.submit-buttton View Recipes

    section#intro-image
        if errors
            ul.my-errors
                for error in errors
                    li= error.msg
        h1 Register to Subscribe
        form(action="." method="POST" class="form-registration")
            label(for="name") Name:
            input(
                type="text"
                id="name"
                name="name"
                class="form-control"
                value=data.name
            )

            label(for="email") Email:
            input(
                type="email"
                id="email"
                name="email"
                class="form-control"
                value=data.email
            )

            label(for="username") Username:
            input(
                type="username"
                id="username"
                name="username"
                class="form-control"
                value=data.username
            )
            
            label(for="password") Password:
            input(
                type="password"
                id="password"
                name="password"
                class="form-control"
                value=data.password
            )

            input(
                type="submit" 
                value="Submit"
                class="btn btn-lg btn-primary btn-block"
            )